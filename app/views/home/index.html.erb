<% if user_signed_in? %>
    Hello <%= current_user.name %> <br />
    <h3> Current Milestone Tracks </h3>
    <hr />
    <div class="container">
    	<% @user.milestone_tracks.each do |track| %>
    		<div class="row">
    			<h4><%= track.name %></h4>
    			<div class="line col-sm-11">
    				<hr/>
    			</div>
    			<div class="line col-sm-1">
    				<span class="glyphicon glyphicon-certificate btn-lg"></span>
    			</div>
    			<div>
    				<ul>
    					<% @milestones_all.where(track_id: track.id ).each do |m| %>
    							<li class="milestone_icon" id="<%= m.id %>"><span class="glyphicon glyphicon-flag btn-lg">
    							</span><milestone class="hidden"><%= m.name %></milestone></li>

    					<% end %>
    				</ul> <br />
    			</div>
    		</div>
    	<% end %>
    </div>
    <!-- Script for showing and displaying Milestones -->
    <script>
    	milestones();
    </script>
<% else %>
    Welcome to GoalKeeper!
<% end %>
