<div>
	<%= form_for [@user, @milestone], html: { class: 'update-form' } do |f| %>
		<% if @milestone.completed != true %>
			<%= f.label 'Name: ' %>
			<%= f.text_field :name %>
			<%= f.label 'Mark Complete?' %>
			<%= f.check_box(:completed) %>
			<%= f.label 'Due date: ' %>
			<%= f.date_field :due %>
			
			<%= f.submit 'Update this Milestone' %>
		<% end %>
	<% end %>
</div>
